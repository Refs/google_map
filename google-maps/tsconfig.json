{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        // 打开这一项 会造成源文件与编译后的文件的符号产生冲突；
        "allowJs": false,
        "outDir": "./build/js",
    },
    // 最好能值编译某一个文件
    "files": [
        "app.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}